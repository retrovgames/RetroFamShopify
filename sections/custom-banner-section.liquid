{% schema %}
{
  "name": "Custom Banner Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image_desktop",
      "label": "Desktop Background Image"
    },
    {
      "type": "image_picker",
      "id": "background_image_mobile",
      "label": "Mobile Background Image"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay Opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "default": 0.5
    },
    {
      "type": "text",
      "id": "section_height",
      "label": "Section Height (e.g., 100vh or 600px)",
      "default": "100vh"
    },
    {
      "type": "select",
      "id": "vertical_alignment",
      "label": "Vertical Alignment",
      "options": [
        { "value": "flex-start", "label": "Top" },
        { "value": "center", "label": "Middle" },
        { "value": "flex-end", "label": "Bottom" }
      ],
      "default": "flex-end"
    },
    {
      "type": "select",
      "id": "horizontal_alignment",
      "label": "Horizontal Alignment",
      "options": [
        { "value": "flex-start", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "flex-end", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Relive, Replay, Rejoice"
    },
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Paragraph",
      "default": "Explore the ultimate collection of retro and modern consoles designed for true gamers."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div
  class="custom-banner-wrapper"
  id="banner-{{ section.id }}"
  style="height: {{ section.settings.section_height }};"
>
  <div class="custom-banner-overlay"
       style="background-color: {{ section.settings.overlay_color }};
              opacity: {{ section.settings.overlay_opacity }};">
  </div>

  <div class="custom-banner-inner"
       style="align-items: {{section.settings.vertical_alignment}};
              justify-content: {{section.settings.horizontal_alignment}};">
    <div class="custom-banner-content">
      <h1>{{ section.settings.heading }}</h1>
      <p>{{ section.settings.paragraph }}</p>
      {% if section.settings.button_link %}
        <a href="{{ section.settings.button_link }}" class="custom-banner-btn">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

<style>
.custom-banner-wrapper {
  position: relative;
  display: flex;
  width: 100%;
  overflow: hidden;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  flex-direction: column;
}

/* Section-specific desktop background image */
#banner-{{ section.id }} {
  {% if section.settings.background_image_desktop %}
    background-image: url({{ section.settings.background_image_desktop | image_url }}?v={{ 'now' | date: '%s' }});
  {% endif %}
}

.custom-banner-overlay {
  position: absolute;
  inset: 0;
  z-index: 1;
  pointer-events: none;
}

.custom-banner-inner {
  display: flex;
  flex-grow: 1;
  width: 100%;
  height: 100%;
  padding: 30px;
  position: relative;
  z-index: 2;
}

.custom-banner-content {
  text-align: center;
  max-width: 800px;
  color: #fff;
}

.custom-banner-content h1 {
  font-size: 2.5rem;
  margin-bottom: 10px;
}

.custom-banner-content p {
  margin-bottom: 20px;
  font-size: 1.2rem;
}

.custom-banner-btn {
  display: inline-block;
  padding: 12px 28px;
  border: 1px solid #fff;
  color: #fff;
  text-decoration: none;
  transition: background 0.3s ease;
}

.custom-banner-btn:hover {
  background-color: #fff;
  color: #000;
}

/* Section-specific mobile styles */
@media screen and (max-width: 768px) {
  #banner-{{ section.id }} {
    {% if section.settings.background_image_mobile %}
      background-image: url({{ section.settings.background_image_mobile | image_url }}?v={{ 'now' | date: '%s' }}) !important;
    {% endif %}
  }

  .custom-banner-content h1 {
    font-size: 2rem;
  }

  .custom-banner-content p {
    font-size: 1rem;
  }

  .custom-banner-inner {
    padding: 20px;
  }
}

/* Tablet breakpoint (optional) */
@media screen and (min-width: 769px) and (max-width: 1024px) {
  .custom-banner-content h1 {
    font-size: 2.2rem;
  }
  
  .custom-banner-inner {
    padding: 25px;
  }
}
</style>