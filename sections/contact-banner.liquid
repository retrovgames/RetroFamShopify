<style>
    /* Reset and Base Styles */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        line-height: 1.6;
        color: #080707;
    }

    /* Utility Classes */
    .text-orange {
        color: #FF6B35;
    }

    .text-white {
        color: white;
    }

    .bg-green-muted {
        background-color: #E8F5E8;
    }

    .bg-blue {
        background-color: #1E3A8A;
    }

    .bg-blue-light {
        background-color: #EFF6FF;
    }

    .bg-cgreen {
        background-color: #10B981;
    }

    .bg-white {
        background-color: white;
    }

    .border-dark {
        border-color: #080707;
    }

    .shadow-plain-drop {
        box-shadow: 4px 4px 0px #080707;
    }

    .shadow-plain-drop-sm {
        box-shadow: 2px 2px 0px #080707;
    }

    /* Banner Section */
    .banner-section {
        position: relative;
        background-color: {{ section.settings.background_color | default: '#42b792db' }};
        padding: 1rem 1rem 4rem 1rem;
        min-height: 404px;
        overflow: hidden;
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
    }

    {% if section.settings.background_image %}
    .banner-section {
        background-image: url('{{ section.settings.background_image | image_url: width: 1920 }}');
    }
    {% endif %}

    @media (min-width: 1024px) {
        .banner-section {
            padding-left: 5.3125rem;
            padding-right: 5.3125rem;
        }
    }

    @media (min-width: 1536px) {
        .banner-section {
            padding-right: 11.25rem;
        }
    }

    .controller-tag {
        position: absolute;
        top: 363px;
        right: 0;
        width: 100px;
        height: auto;
    }

    @media (min-width: 768px) {
        .controller-tag {
            top: 60px;
            right: -28px;
            width: 135px;
        }
    }

    /* Breadcrumb */
    .breadcrumb {
        margin-bottom: 1.25rem;
    }

    .breadcrumb-list {
        display: flex;
        align-items: center;
        list-style: none;
        gap: 0.5rem;
    }

    .breadcrumb-link {
        color: {{ section.settings.breadcrumb_color | default: '#080707' }};
        text-decoration: none;
        font-size: 0.875rem;
    }

    .breadcrumb-link:hover {
        text-decoration: underline;
    }

    .breadcrumb-separator {
        color: {{ section.settings.breadcrumb_color | default: '#080707' }};
        font-size: 0.875rem;
    }

    /* Banner Content */
    .banner-content {
        margin-top: 1.25rem;
        display: flex;
        flex-direction: column;
        gap: 2.5rem;
    }

    @media (min-width: 1280px) {
        .banner-content {
            margin-top: 2.9375rem;
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
            gap: 8.0625rem;
        }
    }

    .banner-text {
        max-width: 422px;
    }

    .banner-title {
        font-size: 2.25rem;
        font-weight: bold;
        line-height: 1.2;
        max-width: 319px;
        display: flex;
        align-items: flex-start;
        gap: 0.5rem;
        color: {{ section.settings.title_color | default: '#080707' }};
    }

    @media (min-width: 1024px) {
        .banner-title {
            max-width: 400px;
            gap: 0.75rem;
        }
    }

    .crown-icon {
        width: 26px;
        height: 26px;
        margin-top: -0.75rem;
        object-fit: contain;
    }

    @media (min-width: 1024px) {
        .crown-icon {
            width: 55px;
            height: 55px;
            margin-top: -1.25rem;
        }
    }

    .banner-description {
        margin-top: 1.25rem;
        font-size: 1rem;
        line-height: 1.6;
        color: {{ section.settings.description_color | default: '#080707' }};
    }

    .banner-faq {
        margin-top: 1.25rem;
        font-size: 1rem;
        color: {{ section.settings.description_color | default: '#080707' }};
    }

    .faq-link {
        color: {{ section.settings.accent_color | default: '#FF6B35' }};
        font-weight: bold;
        text-decoration: none;
    }

    .faq-link:hover {
        text-decoration: underline;
    }

    /* Contact Info Grid */
    .contact-info-grid {
        flex: 1;
        max-width: 650px;
        display: grid;
        gap: 1.125rem;
    }

    @media (min-width: 768px) {
        .contact-info-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 2.5rem;
        }
    }

    @media (min-width: 1280px) {
        .contact-info-grid {
            max-width: 650px;
        }
    }

    .contact-item {
        display: flex;
        gap: 1.25rem;
    }

    .contact-icon {
        width: 60px;
        height: 60px;
        aspect-ratio: 1;
        margin-top: 2px;
        border: 1px solid {{ section.settings.icon_border_color | default: '#080707' }};
        background-color: {{ section.settings.icon_background_color | default: 'white' }};
        box-shadow: 4px 4px 0px {{ section.settings.icon_border_color | default: '#080707' }};
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .icon {
        width: 40px;
        height: 40px;
        object-fit: contain;
    }

    .contact-icon .icon[src*="location-mark.svg"],
    .contact-icon .icon[src*="clock.svg"] {
        width: 22px;
        height: 22px;
    }

    .contact-icon .icon[src*="heart-cgreen.svg"] {
        width: 20px;
        height: 20px;
    }

    .contact-details {
        flex: 1;
    }

    .contact-label {
        font-weight: bold;
        font-size: 1rem;
        margin-bottom: 0.625rem;
        color: {{ section.settings.label_color | default: '#080707' }};
    }

    .contact-value {
        font-size: 1rem;
        line-height: 1.6;
        color: {{ section.settings.text_color | default: '#080707' }};
    }

    .contact-link {
        color: {{ section.settings.link_color | default: '#080707' }};
        text-decoration: none;
    }

    .contact-link:hover {
        text-decoration: underline;
    }

    /* Social Links */
    .social-links {
        margin-top: 0.625rem;
        display: flex;
        flex-wrap: wrap;
        gap: 1.25rem;
    }

    .social-link {
        display: inline-block;
        transition: transform 0.2s ease;
    }

    .social-link:hover {
        transform: scale(1.1);
    }

    .social-link svg path {
        fill: {{ section.settings.social_icon_color | default: '#080707' }};
    }

    /* Responsive Design */
    @media (max-width: 767px) {
        .banner-title {
            font-size: 1.875rem;
        }
    }

    /* Animation Classes */
    .fade-in {
        animation: fadeIn 0.5s ease-in-out;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .slide-in {
        animation: slideIn 0.5s ease-out;
    }

    @keyframes slideIn {
        from {
            transform: translateX(-100%);
        }
        to {
            transform: translateX(0);
        }
    }

    /* Accessibility */
    @media (prefers-reduced-motion: reduce) {
        * {
            animation-duration: 0.01ms !important;
            animation-iteration-count: 1 !important;
            transition-duration: 0.01ms !important;
        }
    }

    .main-background{
        background-image: url('/img/main-background.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        width: 100%;
        height: 100%;
    }
</style>

