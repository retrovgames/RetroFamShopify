<link rel="stylesheet" href="{{ 'about.css' | asset_url }}">

<section
  class="mission-section"
  style="
    background:{{ section.settings.bg_color }};
    max-width:{{ section.settings.max_width }}px;
    margin:100px auto 0 auto;
    padding:{{ section.settings.padding_top }}px 20px {{ section.settings.padding_bottom }}px 20px;
    text-align:center;
    position:relative;
  "
>
  {% if section.settings.logo_image != blank %}
    <div
      class="logo"
      style="margin-top:{{ section.settings.logo_top }}px; text-align:center;"
    >
      <img
        src="{{ section.settings.logo_image | img_url: 'master' }}"
        alt="{{ section.settings.logo_alt | escape }}"
        width="{{ section.settings.logo_width }}"
        height="{{ section.settings.logo_height }}"
        style="width:{{ section.settings.logo_width }}px;height:{{ section.settings.logo_height }}px;display:inline-block;"
        loading="lazy"
      >
    </div>
  {% endif %}

  <div class="mission-box" style="margin-top:{{ section.settings.box_margin_top }}px;">
    <h2
      style="
        color:{{ section.settings.heading_color }};
        font-size:{{ section.settings.heading_size }}px;
        font-family:'Press Start 2P',system-ui;
        margin-bottom:{{ section.settings.heading_margin_bottom }}px;
      "
    >
      {{ section.settings.heading }}
    </h2>
    <p
      style="
        color:{{ section.settings.text_color }};
        font-size:{{ section.settings.text_size }}px;
        line-height:1.5;
        margin:0;
      "
    >
      {{ section.settings.text }}
    </p>
  </div>
</section>

{% schema %}
{
  "name": "Our Mission",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo Image"
    },
    {
      "type": "text",
      "id": "logo_alt",
      "label": "Logo Alt Text",
      "default": "logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "label": "Logo Width (px)",
      "min": 20,
      "max": 400,
      "step": 10,
      "default": 180
    },
    {
      "type": "range",
      "id": "logo_height",
      "label": "Logo Height (px)",
      "min": 20,
      "max": 400,
      "step": 10,
      "default": 130
    },
    {
      "type": "range",
      "id": "logo_top",
      "label": "Logo Top Margin (px)",
      "min": 0,
      "max": 100,
      "step": 10,
      "default": 0
    },
    {
      "type": "range",
      "id": "box_margin_top",
      "label": "Margin Top for Box (px)",
      "min": 0,
      "max": 200,
      "step": 10,
      "default": 20
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Mission"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#FFFFFF"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 14,
      "max": 48,
      "step": 2,
      "label": "Heading Font Size (px)",
      "default": 24
    },
    {
      "type": "range",
      "id": "heading_margin_bottom",
      "min": 0,
      "max": 40,
      "step": 10,
      "label": "Heading Bottom Margin (px)",
      "default": 20
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Mission Text",
      "default": "To keep the spirit of retro gaming alive. We offer a handpicked collection of authentic consoles, timeless games, and nostalgic collectiblesâ€”handpicked with care. We make it easy for you to reconnect with your gaming roots, whether you're a seasoned gamer reliving your childhood or discovering the legends of the past for the first time. We aim to bring you the real retro gaming experience."
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 12,
      "max": 32,
      "step": 2,
      "label": "Text Size (px)",
      "default": 20
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#EA4325"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top Padding (px)",
      "min": 0,
      "max": 100,
      "step": 10,
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom Padding (px)",
      "min": 0,
      "max": 100,
      "step": 10,
      "default": 30
    },
    {
      "type": "range",
      "id": "max_width",
      "label": "Max Width (px)",
      "min": 300,
      "max": 1200,
      "step": 10,
      "default": 880
    }
  ],
  "presets": [
    {
      "name": "Our Mission",
      "category": "About Sections"
    }
  ]
}
{% endschema %}
