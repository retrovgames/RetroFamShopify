{% assign has_video = false %}
{% for block in section.blocks %}
  {% if block.settings.youtube_link contains 'v=' %}
    {% assign has_video = true %}
    {% break %}
  {% endif %}
{% endfor %}

{% if has_video %}
<div class="what-people-think">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="section-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="swiper mySwiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          {% assign youtube_id = block.settings.youtube_link | split: 'v=' | last %}
          {% if youtube_id != blank %}
            <div class="swiper-slide">
              <div class="slide-media youtube-wrapper" data-video-id="{{ youtube_id }}">
                <img src="https://img.youtube.com/vi/{{ youtube_id }}/hqdefault.jpg" alt="{{ product.title }}" class="youtube-thumb">
                <div class="play-button"></div>
              </div>

              {% if block.settings.caption != blank %}
                <p class="slide-caption">{{ block.settings.caption }}</p>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div>
  </div>
</div>
{% endif %}

<style>
.what-people-think {
  padding: 40px 0;
}
.section-heading {
  margin-bottom: 20px;
}
.swiper-slide {
  text-align: center;
}
.slide-media img, 
.slide-media iframe {
  max-width: 100%;
  max-height: 293px;
  object-fit: cover;
}

/* YouTube thumbnail play overlay */
.youtube-wrapper {
  position: relative;
  cursor: pointer;
}
.youtube-thumb {
  width: 100%;
}
.play-button {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 64px;
  height: 64px;
  background: url('https://upload.wikimedia.org/wikipedia/commons/e/e4/Play_icon_%28white%29.svg') no-repeat center center;
  background-size: contain;
}
.slide-caption {
  font-size: 14px;
  position: absolute;
  bottom: 0;
  left: 50%;
  color: #fff;
  transform: translate(-50%, -50%);
  margin: 0;
}
</style>


<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Init Swiper
    new Swiper('.mySwiper', {
      slidesPerView: 2.5,
      spaceBetween: 20,
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      breakpoints: {
        0: { slidesPerView: 1 },
        768: { slidesPerView: 2 },
        1024: { slidesPerView: 2.5 }
      }
    });

    // YouTube click-to-play
    document.querySelectorAll('.youtube-wrapper').forEach(function(wrapper) {
      wrapper.addEventListener('click', function() {
        var videoId = wrapper.getAttribute('data-video-id');
        wrapper.innerHTML = '<iframe width="100%" height="293" src="https://www.youtube.com/embed/' 
          + videoId + '?autoplay=1&modestbranding=1&rel=0&controls=1&iv_load_policy=3" frameborder="0" allow="autoplay; encrypted-media; picture-in-picture" allowfullscreen></iframe>';
      });
    });
  });
</script>

{% schema %}
{
  "name": "What People Think Slider",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "What People Think"
    }
  ],
  "blocks": [
    {
      "type": "youtube_slide",
      "name": "YouTube Video",
      "settings": [
        {
          "type": "text",
          "id": "youtube_link",
          "label": "YouTube Video Link",
          "info": "Paste full YouTube link (e.g., https://www.youtube.com/watch?v=XXXXXX)"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Caption"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "What People Think Slider",
      "category": "Testimonials",
      "blocks": [
        { "type": "youtube_slide" },
        { "type": "youtube_slide" },
        { "type": "youtube_slide" }
      ]
    }
  ]
}
{% endschema %}
