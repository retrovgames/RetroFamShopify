/* Desktop Layout */
@media (min-width: 768px) {
  .shop-category-block:nth-child(-n+3) {
    width: calc(33.3333% - 20px);
    text-align: center;
  }
  .shop-category-block:nth-child(n+4) {
    width: calc(50% - 20px);
    flex-direction: row-reverse;
  }
  .shop-category-block:nth-child(-n+3) .shop-category-image {
    margin-top: -180px;
  }
  .shop-category-block:nth-child(n+4) .shop-category-image {
    margin-bottom: -100px;
    margin-right: -30px;
  }
}

@media (max-width: 1224px) {
  .shop-category-block:nth-child(n+4) {
    flex-direction: column;
  }
  .shop-category-block:nth-child(n+4) .shop-category-image {
    margin-bottom: 0;
    margin-right: 0;
  }
  .shop-category-block:nth-child(-n+3) .shop-category-image {
    margin-top: -100px;
  }
}

/* Mobile Layout */
@media (max-width: 767px) {
  .shop-category-block {
    width: 100% !important;
    text-align: center;
  }
  .shop-category-image {
    max-height: 221px;
    margin-top: -100px;
  }
  .shop-categories-wrapper {
    gap: 120px;
    margin-top: 120px;
  }

  
  .shop-category-title {
    font-size: 20px;
    line-height: 30px;
  }
  .alh-shop-categories_section .section-header__title {
    font-size: 24px;
    line-height: 32px;
  }
}
{% endstylesheet %}
<div class="page-width alh-shop-categories_section">
  <h2 class="section-header__title">
    {{ section.settings.section_title }}
  </h2>
  <div class="shop-categories-wrapper">
    {% for block in section.blocks %}
      <a class="shop-category-block" href="{{ block.settings.link }}" style="background-color: {{ block.settings.bg_color }}">
        {% if block.settings.image %}
          <img src="{{ block.settings.image | image_url: width: 400 }}" class="shop-category-image" alt="{{ block.settings.title }}" loading="lazy">
        {% endif %}
        <div class="shop-category-content">
          <div class="shop-category-title">{{ block.settings.title }}</div>
          <div class="shop-category-text">{{ block.settings.text }}</div>
        </div>
      </a>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Shop by Categories",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Shop by Categories"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Category Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Category Title",
          "default": "Category Title"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Category Text",
          "default": "Lorem ipsum dolor sit amet."
        },
        {
          "type": "color",
          "id": "bg_color",
          "label": "Background Color",
          "default": "#333333"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Shop by Categories",
      "category": "Custom"
    }
  ]
}
{% endschema %}
