{% stylesheet %}
.alh-shop-categories_section {
  margin: 140px auto;
}
.alh-shop-categories_section .section-header__title {
  text-align: center;
  font-size: 32px;
  line-height: 40px;
}
.shop-categories-wrapper {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  margin-top: 160px;
}

.shop-category-block {
  padding: 30px;
  box-sizing: border-box;
  transition: transform 0.3s ease;
  text-decoration: none;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  color: white;
  border: 2px solid #080707;
  box-shadow: 5px 5px #080707;
}

.shop-category-block:hover {
  transform: translateY(-5px);
  color: white;
}

.shop-category-image {
  max-height: 309px;
  margin-bottom: 15px;
  width: 100%;
  object-fit: contain;
}

.shop-category-title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 10px;
  line-height: 32px;
  text-transform: uppercase;
}

.shop-category-text {
  font-size: 16px;
  line-height: 24px;
}

