  display: none;
}

.alh-product_section .image-wrap:not(.image-wrap__thumbnail) image-element {
  position: unset;
}

.alh-product_section .product__photos--beside {
    display: unset;
}

.alh-product_section .grid__item {
    float: unset;
    min-height: unset;
    padding-left: 0;
    width: 100%;
