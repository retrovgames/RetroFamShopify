  align-items: center;
  margin-bottom: 35px;
  gap: 5px;
}
.alh-grid-desc [data-product-price] {
  font-size: 32px;
  color: #fff;
  font-weight: 700;
  line-height: 40px;
  margin-right: 0;
}
.alh-grid-desc [data-compare-price] {
  font-size: 24px;
    color: #FFFFFF66;
    line-height: 32px;
}
