    flex-direction: column-reverse;
    padding: 30px;
  }
  .featured-product-slider-section .swiper-pagination {
    bottom: 3%;
    left: 50%;
    transform: translateX(-50%);
  }
  .alh-grid-desc .alh-btn__container {
    flex-direction: column;
    width: 100%;
  }
  .alh-grid-desc button.btn.btn--full {
    max-width: 100%;
  }
  .alh-product_section .alh-grid {
    gap: 20px;
  }
}
@media (max-width: 768px) {
  .featured-product-image {
    max-width: 243px;
  }
  .alh-grid-desc .product-single__title {
    font-size: 20px;
    line-height: 28px;
    text-align: center;
  }
  .alh-stock-review {
    gap: 18px;
    font-size: 12px;
    justify-content: center;
  }
  .alh-short_desc {
    line-height: 22px;
    margin-bottom: 15px;
    font-size: 14px;
    text-align: center;
  }
  .alh-grid-desc .product-single__meta {
    margin-top: 0;
  }
  .alh-grid-desc [data-product-price] {
    font-size: 16px;
    line-height: 24px;
  }
  .alh-grid-desc [data-compare-price] {
    font-size: 16px;
    line-height: 24px;
  }
  .alh-grid-desc .product-block--price {
    justify-content: center;
  }
}
</style>

<section class="featured-product-slider-section page-width">
  <div class="swiper featured-swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        {% assign product = all_products[block.settings.product] %}
        <div class="swiper-slide">
          <div class="featured-product-block" style="background-color: {{ block.settings.bg_color }}">
            {%- render 'alh-product-template',
              product: product,
              section_id: section.id,
              blocks: block,
              context: 'featured-product',
            -%}
          </div>
        </div>
      {% endfor %}
    </div>
    <!-- Dots pagination goes here -->
    <div class="swiper-pagination"></div>
  </div>
</section>


<script>
  document.addEventListener("DOMContentLoaded", function () {
    const featuredSwiper = new Swiper(".featured-swiper", {
      slidesPerView: 1,
      spaceBetween: 30,
      loop: true,
      pagination: {
        el: ".swiper-pagination",
        clickable: true,
      }
    });

    function equalizeTestimonialHeights() {
      const slides = document.querySelectorAll('.featured-product-block');
      let maxHeight = 0;
      // Reset height
      slides.forEach(slide => {
        slide.style.height = 'auto';
      });
      // Calculate max height
      slides.forEach(slide => {
        const height = slide.offsetHeight;
        if (height > maxHeight) maxHeight = height;
      });
      // Apply max height to all
      slides.forEach(slide => {
        slide.style.height = maxHeight + 'px';
      });
    }
    // Run on load and resize
    window.addEventListener('load', equalizeTestimonialHeights);
    window.addEventListener('resize', equalizeTestimonialHeights);
    // Optional: run after a small delay if images are inside
    setTimeout(equalizeTestimonialHeights, 500);




  });
</script>

{% schema %}
{
  "name": "Featured Product Slider",
  "settings": [],
  "blocks": [
    {
      "type": "product_block",
      "name": "Product Slide",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select product"
        },
        {
          "type": "image_picker",
          "id": "custom_image",
          "label": "Optional image (replaces product image)"
        },
        {
          "type": "color",
          "id": "bg_color",
          "label": "Background color",
          "default": "#ffffff"
        }
      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
    {
      "name": "Featured Product Slider",
      "blocks": []
    }
  ]
}
{% endschema %}
