  margin-top: 60px;
  position: relative;
}
.featured-product-block {
  {% comment %} display: flex;
  justify-content: center;
  align-items: center; {% endcomment %}
  border: 2px solid #080707;
  box-shadow: 4px 4px #080707;
  margin-right: 4px;
  margin-bottom: 4px;
}
.featured-product-inner {
  display: flex;
  gap: 126px;
  justify-content: center;
  align-items: center;
  padding: 0 110px;
}
.featured-product-image {
  text-align: center;
  max-width: 414px;
  margin: 0 auto;
}
.featured-product-image img {
  margin: 0 auto;
}
.featured-product-details {
  flex: 1 1 50%;
}
.featured-title {
  font-size: 24px;
  margin-bottom: 10px;
}
.featured-meta {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
  font-size: 14px;
}
.featured-desc {
  margin-bottom: 10px;
  color: #555;
}
.featured-price {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 15px;
}
.featured-buttons .btn {
  padding: 10px 20px;
  margin-right: 10px;
  background-color: #000;
  color: #fff;
  border: none;
  cursor: pointer;
}
.featured-buttons .buy-now {
  background-color: #007bff;
}

