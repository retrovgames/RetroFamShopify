  display: none;
}

.alh-grid-desc .alh-btn__container {
  display: flex;
  gap: 20px;
  justify-content: flex-start;
  align-items: center;
}

.alh-grid-desc button.btn.btn--full {
  max-width: 196px;
  border: 2px solid #FFFFFF;
  box-shadow: 4px 4px #CECDCD;
