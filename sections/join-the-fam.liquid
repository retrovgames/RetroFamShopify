<link rel="stylesheet" href="{{ 'about.css' | asset_url }}">

<section
  class="join-fam-section"
  style="
    background:{{ section.settings.bg_color }};
    border-top:5px dashed {{ section.settings.border_color }};
    border-bottom:5px dashed {{ section.settings.border_color }};
    padding:0;
  "
>
  <div class="join-fam-content" style="max-width:{{ section.settings.max_width }}px;margin:0 auto;display:flex;align-items:center;gap:{{ section.settings.gap }}px;padding:{{ section.settings.padding }}px 20px;">
    <div class="join-fam-left" style="flex:1;color:{{ section.settings.text_color }};">
      <h2 style="font-size:{{ section.settings.heading_size }}px;font-weight:bold;margin-bottom:5px;color:{{ section.settings.heading_color }};">
        {{ section.settings.heading }}
      </h2>
      <p style="font-size:{{ section.settings.text_size }}px;line-height:1.6;margin-bottom:16px;">
        {{ section.settings.paragraph }}
      </p>
      <div class="contact-info" style="display:flex;flex-direction:column;gap:10px;">
        {% for block in section.blocks %}
          <div class="contact-item" style="display:flex;align-items:center;gap:10px;font-size:16px;color:{{ section.settings.text_color }};">
            {% if block.settings.icon != blank %}
              <img src="{{ block.settings.icon | img_url: '40x' }}" 
                   alt="{{ block.settings.icon_alt }}" 
                   width="24"
                   height="24"
                   style="width:24px;height:24px;"
                   loading="lazy">
            {% endif %}
            <span style="font-size:14px;">{{ block.settings.contact_text }}</span>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="join-fam-right" style="flex:1;display:flex;justify-content:center;align-items:center;">
      {% if section.settings.right_image != blank %}
        <div class="controller-graphic">
          <img src="{{ section.settings.right_image | img_url: 'master' }}" 
               alt="controller" 
               width="400"
               height="300"
               style="width:100%;height:auto;object-fit:contain;"
               loading="lazy">
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Join the Fam",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#E7699E"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border Color",
      "default": "#080707"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Join the Fam"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#FFFFFF"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 24,
      "max": 54,
      "step": 2,
      "label": "Heading Font Size (px)",
      "default": 48
    },
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Paragraph",
      "default": "Gaming brought us together, and it's what keeps us going. So whether you're buying your first retro console or replacing your childhood favorite, you're always welcome here."
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#f0f0f0"
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 12,
      "max": 32,
      "step": 2,
      "label": "Paragraph Font Size (px)",
      "default": 18
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Side Image (Controller Graphic)"
    },
    {
      "type": "range",
      "id": "gap",
      "min": 0,
      "max": 120,
      "step": 10,
      "label": "Left/Right Gap (px)",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding",
      "min": 0,
      "max": 100,
      "step": 10,
      "label": "Top/Bottom Padding (px)",
      "default": 40
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 600,
      "max": 1400,
      "step": 20,
      "label": "Max Width (px)",
      "default": 1060
    }
  ],
  "blocks": [
    {
      "type": "contact",
      "name": "Contact Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Contact Icon"
        },
        {
          "type": "text",
          "id": "icon_alt",
          "label": "Icon Alt Text",
          "default": "icon"
        },
        {
          "type": "text",
          "id": "contact_text",
          "label": "Contact Text",
          "default": "info@example.com"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Join the Fam",
      "category": "About Sections"
    }
  ]
}
{% endschema %}
